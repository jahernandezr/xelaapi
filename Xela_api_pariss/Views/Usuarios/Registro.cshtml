@model RegistroViewModel
@{
    Layout = "_LayoutNuevo1";
}


<div class="container" >
 <div class="card-body" style="padding-top:5%">
        <div class="section-title">
            <h2>Registro</h2>
        </div>

        <form asp-action="Registro" style="padding: 2% ;padding-top: 5% ">
    <div asp-validation-summary="ModelOnly" class="text-danger">
    </div>
    <div class="row">
    <div class="mb-3 col-8">
            <label asp-for="Email" class="form-label"> </label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3 col-4">
       <label asp-for="Cedula" class="form-label"> </label>
       <input asp-for="Cedula" class="form-control" type="number"/>
       <span asp-validation-for="Cedula" class="text-danger"></span>
    </div>
    <div class="mb-3 col-9">
                    <label asp-for="UserName" class="form-label">Nombres Y Apellidos </label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
         <div class="mb-3 col-4">
                    <label asp-for="Password" class="form-label"> </label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
         </div>
       </div>

    <button class=" btn btn-dark">Registrate</button>
</form>    
</div>
</div>

                @section Scripts{
    <partial name="_ValidationScriptsPartial" />
                }